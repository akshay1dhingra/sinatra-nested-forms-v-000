<h1>Pirate</h1>

<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h3>Weight: <%= @pirate.weight %></h3><br>
  <h3>Height: <%= @pirate.height %></h3><br>
</div>

<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= @@ships.name %></p><br>
    <p>Type: <%= @@ships.type %></p><br>
    <p>Booty: <%= @@ships.booty %></p><br>
  </div>
<% end %>
